{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "ap/ap-contact-card",
	"version": "1.0.0",
	"title": "AP Contact Card",
	"category": "widgets",
	"icon": "id",
	"description": "A WordPress block to insert a card that shows personal contact information.",
	"keywords": [ "card", "contact" ],
	"attributes": {
		"fullName": {
			"type": "string",
			"source": "text",
			"selector": ".apcc-full-name"
		},
		"jobTitle": {
			"type": "string",
			"source": "text",
			"selector": ".apcc-job-title"
		},
		"email": {
			"type": "string",
			"source": "text",
			"selector": ".apcc-email"
		},
		"description": {
			"type": "string",
			"source": "text",
			"selector": ".apcc-description"
		},
		"imageUrl": {
			"type": "string",
			"source": "attribute",
			"selector": ".apcc-image",
			"attribute": "src"
		},
		"imageAlt": {
			"type": "string",
			"source": "attribute",
			"selector": ".apcc-image",
			"attribute": "alt"
		},
		"workplace": {
			"type": "string"
		}
	},
	"supports": {
		"html": false
	},
	"textdomain": "ap-contact-card",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
